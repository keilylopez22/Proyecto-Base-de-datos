@model List<ArsanWebApp.Models.Vehiculo>

<h2>Vehículos Registrados</h2>

<!-- Barra de búsqueda -->
<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="placa" class="form-control" placeholder="Buscar por placa..." value="@ViewBag.SearchTerm">
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <a asp-action="Index" class="btn btn-outline-danger">Limpiar</a>
        }
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Registrar Nuevo Vehículo</a></p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Placa</th>
                <th>Año</th>
                <th>Línea</th>
                <th>Marca</th>
                <th>Vivienda</th>
                <th>Cluster</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehiculo in Model)
            {
                <tr>
                    <td>@vehiculo.IdVehiculo</td>
                    <td>@vehiculo.Placa</td>
                    <td>@vehiculo.Año</td>
                    <td>@vehiculo.Linea</td>
                    <td>@vehiculo.Marca</td>
                    <td>@vehiculo.Vivienda</td>
                    <td>@vehiculo.Cluster</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@vehiculo.IdVehiculo" class="btn btn-sm btn-info">Ver</a>
                        <a asp-action="Edit" asp-route-id="@vehiculo.IdVehiculo" class="btn btn-sm btn-warning">Editar</a>
                        <form asp-action="Delete" asp-route-id="@vehiculo.IdVehiculo" method="post" style="display:inline;" 
                              onsubmit="return confirm('¿Eliminar este vehículo?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <p>No se encontraron vehículos con la placa "@ViewBag.SearchTerm".</p>
        }
        else
        {
            <p>No hay vehículos registrados.</p>
        }
    </div>
}