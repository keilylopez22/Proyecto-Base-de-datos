@model List<ArsanWebApp.Models.Vehiculo>

<h2>Vehículos Registrados</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-2">
        <input type="number" class="form-control" name="anioFilter" 
               value="@ViewBag.AnioFilter" placeholder="Año">
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control" name="marcaFilter" 
               value="@ViewBag.MarcaFilter" placeholder="Marca">
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control" name="lineaFilter" 
               value="@ViewBag.LineaFilter" placeholder="Línea">
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control" name="placaFilter" 
               value="@ViewBag.PlacaFilter" placeholder="Placa">
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Registrar Nuevo Vehículo</a></p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Placa</th>
                <th>Año</th>
                <th>Línea</th>
                <th>Marca</th>
                <th>Vivienda</th>
                <th>Cluster</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehiculo in Model)
            {
                <tr>
                    <td>@vehiculo.IdVehiculo</td>
                    <td>@vehiculo.Placa</td>
                    <td>@vehiculo.Año</td>
                    <td>@vehiculo.Linea</td>
                    <td>@vehiculo.Marca</td>
                    <td>@vehiculo.Vivienda</td>
                    <td>@vehiculo.Cluster</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@vehiculo.IdVehiculo" class="btn btn-sm btn-info">Ver</a>
                        <a asp-action="Edit" asp-route-id="@vehiculo.IdVehiculo" class="btn btn-sm btn-warning">Editar</a>
                        <form asp-action="Delete" asp-route-id="@vehiculo.IdVehiculo" method="post" style="display:inline;" 
                              onsubmit="return confirm('¿Eliminar este vehículo?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <p>No se encontraron vehículos con la placa "@ViewBag.SearchTerm".</p>
        }
        else
        {
            <p>No hay vehículos registrados.</p>
        }
    </div>
}
@* Paginación *@
@if (ViewBag.TotalPaginas > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @* Botón Anterior *@
            <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { 
                       pagina = ViewBag.PaginaActual - 1, 
                       tamanoPagina = ViewBag.TamanoPagina,
                       anioFilter = ViewBag.AnioFilter,
                       marcaFilter = ViewBag.MarcaFilter,
                       lineaFilter = ViewBag.LineaFilter,
                       placaFilter = ViewBag.PlacaFilter
                   })">
                    Anterior
                </a>
            </li>

            @* Números de página *@
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" 
                       href="@Url.Action("Index", new { 
                           pagina = i, 
                           tamanoPagina = ViewBag.TamanoPagina,
                           anioFilter = ViewBag.AnioFilter,
                           marcaFilter = ViewBag.MarcaFilter,
                           lineaFilter = ViewBag.LineaFilter,
                           placaFilter = ViewBag.PlacaFilter
                       })">
                        @i
                    </a>
                </li>
            }

            @* Botón Siguiente *@
            <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { 
                       pagina = ViewBag.PaginaActual + 1, 
                       tamanoPagina = ViewBag.TamanoPagina,
                       anioFilter = ViewBag.AnioFilter,
                       marcaFilter = ViewBag.MarcaFilter,
                       lineaFilter = ViewBag.LineaFilter,
                       placaFilter = ViewBag.PlacaFilter
                   })">
                    Siguiente
                </a>
            </li>
        </ul>
    </nav>
}

@* Información de paginación *@
<div class="text-muted">
    Mostrando @((ViewBag.PaginaActual - 1) * ViewBag.TamanoPagina + 1) 
    a @Math.Min(ViewBag.PaginaActual * ViewBag.TamanoPagina, ViewBag.TotalRegistros) 
    de @ViewBag.TotalRegistros registros
</div>
