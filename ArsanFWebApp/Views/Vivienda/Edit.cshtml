@model ArsanWebApp.Models.Vivienda

<h2>Editar Vivienda</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="NumeroVivienda" />
    <input type="hidden" asp-for="IdCluster" />

    <div class="form-group">
        <label asp-for="IdTipoVivienda">Tipo de Vivienda</label>
        <select asp-for="IdTipoVivienda" class="form-control" asp-items="@(new SelectList(ViewBag.TiposVivienda, "IdTipoVivienda", "Descripcion"))">
            <option value="">-- Seleccione --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdPropietario">Propietario</label>
        <select asp-for="IdPropietario" class="form-control" asp-items="@(new SelectList(ViewBag.Propietarios, "IdPropietario", "NombreCompleto"))">
            <option value="">-- Seleccione --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>