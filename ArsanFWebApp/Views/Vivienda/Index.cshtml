@model ArsanWebApp.Models.PaginatedList<ArsanWebApp.Models.Vivienda>

<h2>Viviendas</h2>

<form method="get" class="mb-3">
    <div class="row">

        <div class="col-md-3">
            <input type="text" name="propietarioFilter" value="@(ViewBag.PropietarioFilter ?? "")" class="form-control" placeholder="Filtrar por Propietario" />
        </div>

        <div class="col-md-3">
            <input type="text" name="tipoViviendaFilter" value="@(ViewBag.TipoViviendaFilter ?? "")" class="form-control" placeholder="Filtrar por Tipo de Vivienda" />
        </div>
        <div class="col-md-3">
            <input type="text" name="clusterFilter" value="@(ViewBag.ClusterFilter ?? "")" class="form-control" placeholder="Filtrar por Cluster" />
        </div>
        
        <div class="col-md-2">
            <select name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 5)">5 por página</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 por página</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 por página</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
        </div>
    </div>
</form>



<p><a asp-action="Create" class="btn btn-primary">Crear Nueva</a></p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Vivienda</th>
            <th>Cluster</th>
            <th>Tipo</th>
            <th>Propietario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.NumeroVivienda</td>
                <td>@v.Cluster</td>
                <td>@v.TipoVivienda</td>
                <td>@v.Propietario</td>
                <td>
                    <a asp-action="Edit" asp-route-numeroVivienda="@v.NumeroVivienda" asp-route-idCluster="@v.IdCluster" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" style="display:inline;"
                          asp-route-numeroVivienda="@v.NumeroVivienda"
                          asp-route-idCluster="@v.IdCluster"
                          onsubmit="return confirm('¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Paginación -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Página">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(Model.PageIndex - 1)&propietarioFilter=@ViewBag.propietarioFilter&tipoViviendaFilter=@ViewBag.TipoViviendaFilter&clusterFilter=@ViewBag.ClusterFilter&pageSize=@ViewBag.PageSize">Anterior</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="?pageIndex=@i&propietarioFilter=@ViewBag.PropietarioFilter&tipoViviendaFilter=@ViewBag.TipoViviendaFilter&clusterFilter=@ViewBag.ClusterFilter&pageSize=@ViewBag.PageSize">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(Model.PageIndex + 1)&propietarioFilter=@ViewBag.propietarioFilter&tipoViviendaFilter=@ViewBag.TipoViviendaFilter&clusterFilter=@ViewBag.ClusterFilter&pageSize=@ViewBag.PageSize">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
}