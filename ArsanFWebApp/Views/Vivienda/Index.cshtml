@model List<ArsanWebApp.Models.Vivienda>

<h2>Viviendas</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nueva</a></p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Vivienda</th>
            <th>Cluster</th>
            <th>Tipo</th>
            <th>Propietario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.NumeroVivienda</td>
                <td>@v.Cluster</td>
                <td>@v.TipoVivienda</td>
                <td>@v.Propietario</td>
                <td>
                    <a asp-action="Edit" asp-route-numeroVivienda="@v.NumeroVivienda" asp-route-idCluster="@v.IdCluster" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" style="display:inline;"
                          asp-route-numeroVivienda="@v.NumeroVivienda"
                          asp-route-idCluster="@v.IdCluster"
                          onsubmit="return confirm('Â¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>