@model ArsanWebApp.Models.AsignacionTurno

<h2>Crear Asignaci√≥n de Turno</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FechaAsignacion"></label>
        <input asp-for="FechaAsignacion" class="form-control" type="date"/>
        <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdEmpleado"></label>
        <input asp-for="IdEmpleado" class="form-control" type="number"/>
        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTurno"></label>
        <input asp-for="IdTurno" class="form-control" type="number"/>
        <span asp-validation-for="IdTurno" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
