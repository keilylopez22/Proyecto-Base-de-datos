@model List<ArsanWebApp.Models.Turno>

<h2>Turnos</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo Turno</a></p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Hora Inicio</th>
            <th>Hora Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.IdTurno</td>
                <td>@t.Descripcion</td>
                <td>@t.HoraInicio</td>
                <td>@t.HoraFin</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.IdTurno" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@t.IdTurno" method="post" style="display:inline;" onsubmit="return confirm('¿Eliminar este turno?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>