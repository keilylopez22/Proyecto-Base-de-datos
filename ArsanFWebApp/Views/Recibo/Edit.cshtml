@model ArsanWebApp.Models.Recibo
@{
    ViewData["Title"] = "Editar Recibo";
}

<div class="container mt-4">
    <h2>Editar Recibo</h2>
    <form asp-action="Edit" method="post" class="mt-3">

        <input type="hidden" asp-for="IdRecibo" />

        <div class="mb-3">
            <label class="form-label">Fecha de Emisión</label>
            <input asp-for="FechaEmision" class="form-control" type="date" required />
        </div>

        <div class="mb-3">
            <label class="form-label">ID Pago</label>
            <input asp-for="IdPago" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Número de Vivienda</label>
            <input asp-for="NumeroVivienda" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label class="form-label">ID Cluster</label>
            <input asp-for="IdCluster" class="form-control" type="number" required />
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>
</div>
