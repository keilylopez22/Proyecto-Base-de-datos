@model IEnumerable<ArsanWebApp.Models.Recibo>
@{
    ViewBag.Title = "Detalles del Recibo";
    int totalCount = ViewBag.TotalCount ?? 0;
    int pageIndex = ViewBag.PageIndex ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}
@{
    ViewData["Title"] = "Listado de Recibos";
}

<h2 class="mb-3">Listado de Recibos</h2>
<form method="get" class="mb-3">
    <div class="row">


        <div class="col-md-2">
            <select name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 5)">5 por página</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 por página</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 por página</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</form>
<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <input type="text" name="FechaEmisionFilter" value="@ViewBag.FechaEmisionFilter" class="form-control"
            placeholder="Fecha Emision (yyyy-mm-dd)">
    </div>
    <div class="col-md-3">
        <input type="text" name="IdPagoFilter" value="@ViewBag.IdPagoFilter" class="form-control" placeholder="Id Pago">
    </div>
    <div class="col-md-2">
        <input type="number" name="numeroViviendaFilter" value="@ViewBag.NumeroViviendaFilter" class="form-control"
            placeholder="Número vivienda">
    </div>
    <div class="col-md-2">
        <input type="number" name="clusterFilter" value="@ViewBag.ClusterFilter" class="form-control"
            placeholder="Cluster">
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>
<div class="mb-3 text-end">
    @if (!string.IsNullOrEmpty(ViewBag.IdPagoFilter?.ToString()) && ViewBag.IdPagoFilter > 0)
    {
        <a asp-action="Create" 
           asp-route-idPago="@ViewBag.IdPagoFilter" 
           class="btn btn-primary">
            Nuevo Recibo
        </a>
    }
    else
    {
        <button class="btn btn-secondary" disabled>
            Nuevo Recibo (requiere seleccionar un Pago)
        </button>
    }
</div>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Recibo</th>
            <th>Fecha</th>
            <th>Pago</th>
            <th>N° Vivienda</th>
            <th>Cluster</th>
            <th>Propietario</th>
            <th>Monto Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdRecibo</td>
                <td>@item.FechaEmision</td>
                <td>@item.IdPago</td>
                <td>@item.NumeroVivienda</td>
                <td>@item.NombreCluster</td>
                <td>@item.NombreCompleto</td>
                <td>@item.MontoTotal.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRecibo" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdRecibo" class="btn btn-sm btn-danger">Eliminar</a>
                    <a href="@Url.Action("Index", "DetalleRecibo", new { idRecibo = item.IdRecibo })"
                        class="btn btn-sm btn-info">Ver Detalle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(pageIndex == 1 ? "disabled" : "")">
            <a class="page-link"
                href="@Url.Action("Index", new { pageIndex = pageIndex - 1, pageSize, FechaEmision = ViewBag.FechaEmision, IdPago = ViewBag.IdPago, NumeroVivienda = ViewBag.NumeroVivienda, Cluster = ViewBag.Cluster })">Anterior</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(pageIndex == i ? "active" : "")">
                <a class="page-link"
                    href="@Url.Action("Index", new { pageIndex = i, pageSize, FechaEmision = ViewBag.FechaEmision, IdPago = ViewBag.IdPago, NumeroVivienda = ViewBag.NumeroVivienda, Cluster = ViewBag.Cluster })">@i</a>
            </li>
        }
        <li class="page-item @(pageIndex == totalPages ? "disabled" : "")">
            <a class="page-link"
                href="@Url.Action("Index", new { pageIndex = pageIndex + 1, pageSize, FechaEmision = ViewBag.FechaEmision, IdPago = ViewBag.IdPago, NumeroVivienda = ViewBag.NumeroVivienda, Cluster = ViewBag.Cluster })">Siguiente</a>
        </li>
    </ul>
</nav>