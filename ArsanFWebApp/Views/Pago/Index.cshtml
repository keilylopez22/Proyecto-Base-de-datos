@model List<ArsanWebApp.Models.Pago>
@{
    ViewBag.Title = "Pagos";
    int totalCount = ViewBag.TotalCount ?? 0;
    int pageIndex = ViewBag.PageIndex ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<h2>@ViewData["Title"]</h2>
<form method="get" class="mb-3">
    <div class="row">
        
       
        <div class="col-md-2">
            <select name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 2)">5 por página</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 por página</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 por página</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Nuevo Pago</a>
</div>

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col">
            <input type="date" name="fechaPagoFilter" value="@ViewData["FechaPagoFilter"]" class="form-control" />
        </div>
        <div class="col">
            <input type="number" step="0.01" name="montoFilter" value="@ViewData["MontoFilter"]" placeholder="Monto" class="form-control" />
        </div>
        <div class="col">
            <input type="text" name="nombreTipoPagoFilter" value="@ViewData["NombreTipoPagoFilter"]" placeholder="Tipo de pago" class="form-control" />
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Tipo de Pago</th>
            <th>Referencia</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPago</td>
                    <td>@item.FechaPago?.ToString("yyyy-MM-dd")</td>
                    <td>@item.MontoTotal?.ToString("N2")</td>
                    <td>@item.NombreTipoPago</td>
                    <td>@item.Referencia</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPago" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdPago" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center">No hay registros</td></tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(pageIndex == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { pageIndex = pageIndex - 1, pageSize, FechaPagoFilter = ViewBag.FechaPagoFilter, MontoTotalFilter = ViewBag.MontoTotalFilter, NombreTipoPagoFilte = ViewBag.NombreTipoPagoFilte})">Anterior</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(pageIndex == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageIndex = i, pageSize, FechaPagoFilter = ViewBag.FechaPagoFilter, MontoTotalFilter = ViewBag.MontoTotalFilter, NombreTipoPagoFilte = ViewBag.NombreTipoPagoFilte})">@i</a>
            </li>
        }
        <li class="page-item @(pageIndex == totalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { pageIndex = pageIndex + 1, pageSize, FechaPagoFilter = ViewBag.FechaPagoFilter, MontoTotalFilter = ViewBag.MontoTotalFilter, NombreTipoPagoFilte = ViewBag.NombreTipoPagoFilte})">Siguiente</a>
        </li>
    </ul>
</nav>
