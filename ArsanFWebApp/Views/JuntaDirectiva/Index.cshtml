@model List<ArsanWebApp.Models.JuntaDirectiva>

<h2>Juntas Directivas</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nueva</a></p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cluster</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var j in Model)
        {
            <tr>
                <td>@j.IdJuntaDirectiva</td>
                <td>@j.Cluster</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@j.IdJuntaDirectiva" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@j.IdJuntaDirectiva" method="post" style="display:inline;" onsubmit="return confirm('Â¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>