@model ArsanWebApp.Models.PaginatedList<ArsanWebApp.Models.Propietario>

<h2>Propietarios</h2>
<!-- Formulario de filtros -->
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <input name="estadoFilter" value="@ViewBag.EstadoFilter" class="form-control" placeholder="Filtrar por Estado)" />
        </div>
        <div class="col-md-3">
            <input name="nombreFilter" value="@ViewBag.NombreFilter" class="form-control" placeholder="Filtrar por nombre propietario" />
        </div>
        <div class="col-md-2">
            <select name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 5)">5 por p치gina</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 por p치gina</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 por p치gina</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
        </div>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Completo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPropietario</td>
                <td>@p.NombreCompleto</td>
                <td>@p.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.IdPropietario" class="btn btn-sm btn-warning">Editar</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="P치gina">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(Model.PageIndex - 1)&estadoFilter=@ViewBag.EstadoFilter&nombreFilter=@ViewBag.NombreFilter&pageSize=@ViewBag.PageSize">Anterior</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="?pageIndex=@ViewBag&estadoFilter=@ViewBag.EstadoFilter&nombreFilter=@ViewBag.NombreFilter&pageSize=@ViewBag.PageSize">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(Model.PageIndex + 1)&estadoFilter=@ViewBag.EstadoFilter&nombreFilter=@ViewBag.NombreFilter&pageSize=@ViewBag.PageSize">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
}