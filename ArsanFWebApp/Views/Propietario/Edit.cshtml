@model ArsanWebApp.Models.Propietario

<h2>Editar Propietario</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdPropietario" />
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" maxlength="10" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdPersona">Persona</label>
        <select asp-for="IdPersona" class="form-control" asp-items="@(new SelectList(ViewBag.Personas, "IdPersona", "Cui"))">
            <option value="">-- Seleccione una persona --</option>
        </select>
        <span asp-validation-for="IdPersona" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>