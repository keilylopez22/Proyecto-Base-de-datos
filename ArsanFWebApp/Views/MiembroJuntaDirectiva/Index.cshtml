@model List<ArsanWebApp.Models.MiembroJuntaDirectiva>

<h2>Miembros de Junta Directiva</h2>
<p><a asp-action="Create" class="btn btn-primary">Registrar Nuevo</a></p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Miembro</th>
            <th>Cluster</th>
            <th>Puesto</th>
            <th>Estado</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Propietario</td>
                <td>@m.Cluster</td>
                <td>@m.Puesto</td>
                <td>@m.Estado</td>
                <td>@m.FechaInicio</td>
                <td>@m.FechaFin</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.IdMiembro" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@m.IdMiembro" method="post" style="display:inline;" onsubmit="return confirm('Â¿Eliminar este miembro?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>