@model ArsanWebApp.Models.DocumentoPersona
@{
    ViewData["Title"] = "Crear Documento";
}

<h2>Crear Documento</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="IdTipoDocumento"></label>
        <input asp-for="IdTipoDocumento" class="form-control" />
        <span asp-validation-for="IdTipoDocumento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdPersona"></label>
        <input asp-for="IdPersona" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumeroDocumento"></label>
        <input asp-for="NumeroDocumento" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Observaciones"></label>
        <input asp-for="Observaciones" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
