@model ArsanWebApp.Models.TipoMulta

<h2>Editar Tipo de Multa</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdTipoMulta" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" maxlength="50"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
