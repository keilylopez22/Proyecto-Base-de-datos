@model ArsanWebApp.Models.DetalleRecibo

<h2>Editar Detalle Recibo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdDetalleRecibo" />
    <input type="hidden" asp-for="IdRecibo" />
    <div class="form-group">
        <label asp-for="IdCobroServicio"></label>
        <input asp-for="IdCobroServicio" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="IdMultaVivienda"></label>
        <input asp-for="IdMultaVivienda" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Actualizar</button>
</form>
