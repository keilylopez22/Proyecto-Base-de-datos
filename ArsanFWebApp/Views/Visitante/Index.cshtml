@model List<ArsanWebApp.Models.Visitante>

<h2>Visitantes</h2>

<!-- Barra de búsqueda -->
<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="numeroDocumento" class="form-control" placeholder="Buscar por número de documento...">
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Registrar Nuevo Visitante</a></p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Completo</th>
            <th>Documento</th>
            <th>Teléfono</th>
            <th>Motivo Visita</th>
            <th>Tipo Documento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitante in Model)
        {
            <tr>
                <td>@visitante.IdVisitante</td>
                <td>@visitante.NombreCompleto</td>
                <td>@visitante.NumeroDocumento</td>
                <td>@visitante.Telefono</td>
                <td>@visitante.MotivoVisita</td>
                <td>@visitante.TipoDocumento</td>
                <td>
                    <a asp-action="Details" asp-route-id="@visitante.IdVisitante" class="btn btn-sm btn-info">Ver</a>
                    <a asp-action="Edit" asp-route-id="@visitante.IdVisitante" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@visitante.IdVisitante" method="post" style="display:inline;" 
                          onsubmit="return confirm('¿Eliminar este visitante?');">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>