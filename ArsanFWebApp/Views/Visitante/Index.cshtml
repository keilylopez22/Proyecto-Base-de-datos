@model List<ArsanWebApp.Models.Visitante>

<h2>Visitantes Registrados</h2>

<!-- Formulario de filtros integrados -->
<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <input type="text" class="form-control" name="numeroDocumentoFilter" 
               value="@ViewBag.NumeroDocumentoFilter" placeholder="Número Documento">
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" name="nombreVisitanteFilter" 
               value="@ViewBag.NombreVisitanteFilter" placeholder="Nombre Completo">
    </div>
    <div class="col-md-3">
        <select class="form-control" name="idTipoDocumentoFilter">
            <option value="">Todos los tipos de documento</option>
            @foreach (var item in ViewBag.TiposDocumento)
            {
                <option value="@item.Value" selected="@(ViewBag.IdTipoDocumentoFilter?.ToString() == item.Value)">
                    @item.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Registrar Nuevo Visitante</a></p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre Completo</th>
                <th>Número Documento</th>
                <th>Teléfono</th>
                <th>Motivo Visita</th>
                <th>Tipo Documento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visitante in Model)
            {
                <tr>
                    <td>@visitante.IdVisitante</td>
                    <td>@visitante.NombreCompleto</td>
                    <td>@visitante.NumeroDocumento</td>
                    <td>@visitante.Telefono</td>
                    <td>@visitante.MotivoVisita</td>
                    <td>@visitante.NombreDocumento</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@visitante.IdVisitante" class="btn btn-sm btn-info">Ver</a>
                        <a asp-action="Edit" asp-route-id="@visitante.IdVisitante" class="btn btn-sm btn-warning">Editar</a>
                        <form asp-action="Delete" asp-route-id="@visitante.IdVisitante" method="post" style="display:inline;" 
                              onsubmit="return confirm('¿Eliminar este visitante?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <p>No hay visitantes registrados.</p>
    </div>
}

@* Paginación *@
@if (ViewBag.TotalPaginas > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { 
                       pagina = ViewBag.PaginaActual - 1, 
                       tamanoPagina = ViewBag.TamanoPagina,
                       numeroDocumentoFilter = ViewBag.NumeroDocumentoFilter,
                       nombreVisitanteFilter = ViewBag.NombreVisitanteFilter,
                       idTipoDocumentoFilter = ViewBag.IdTipoDocumentoFilter
                   })">
                    Anterior
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" 
                       href="@Url.Action("Index", new { 
                           pagina = i, 
                           tamanoPagina = ViewBag.TamanoPagina,
                           numeroDocumentoFilter = ViewBag.NumeroDocumentoFilter,
                           nombreVisitanteFilter = ViewBag.NombreVisitanteFilter,
                           idTipoDocumentoFilter = ViewBag.IdTipoDocumentoFilter
                       })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { 
                       pagina = ViewBag.PaginaActual + 1, 
                       tamanoPagina = ViewBag.TamanoPagina,
                       numeroDocumentoFilter = ViewBag.NumeroDocumentoFilter,
                       nombreVisitanteFilter = ViewBag.NombreVisitanteFilter,
                       idTipoDocumentoFilter = ViewBag.IdTipoDocumentoFilter
                   })">
                    Siguiente
                </a>
            </li>
        </ul>
    </nav>
}

<div class="text-muted">
    Mostrando @((ViewBag.PaginaActual - 1) * ViewBag.TamanoPagina + 1) 
    a @Math.Min(ViewBag.PaginaActual * ViewBag.TamanoPagina, ViewBag.TotalRegistros) 
    de @ViewBag.TotalRegistros registros
</div>
