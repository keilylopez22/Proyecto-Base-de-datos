@model ArsanWebApp.Models.RegistroAccesos

<h2>Registrar Nuevo Acceso</h2>

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaIngreso">Fecha y Hora de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaSalida">Fecha y Hora de Salida (Opcional)</label>
                <input asp-for="FechaSalida" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdVehiculo">Vehículo (Opcional)</label>
                <select asp-for="IdVehiculo" class="form-control">
                    <option value="">-- Seleccione un vehículo --</option>
                    @foreach (var vehiculo in ViewBag.Vehiculos)
                    {
                        <option value="@vehiculo.IdVehiculo">@vehiculo.Placa</option>
                    }
                </select>
                <span asp-validation-for="IdVehiculo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdVisitante">Visitante (Opcional)</label>
                <select asp-for="IdVisitante" class="form-control">
                    <option value="">-- Seleccione un visitante --</option>
                    @foreach (var visitante in ViewBag.Visitantes)
                    {
                        <option value="@visitante.IdVisitante">@visitante.NombreCompleto</option>
                    }
                </select>
                <span asp-validation-for="IdVisitante" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdResidente">Residente (Opcional)</label>
                <select asp-for="IdResidente" class="form-control">
                    <option value="">-- Seleccione un residente --</option>
                    @foreach (var residente in ViewBag.Residentes)
                    {
                        <option value="@residente.IdResidente">Residente @residente.IdResidente</option>
                    }
                </select>
                <span asp-validation-for="IdResidente" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdGarita">Garita</label>
                <select asp-for="IdGarita" class="form-control" required>
                    <option value="">-- Seleccione una garita --</option>
                    @foreach (var garita in ViewBag.Garitas)
                    {
                        <option value="@garita.IdGarita">Garita @garita.IdGarita (Cluster @garita.IdCluster)</option>
                    }
                </select>
                <span asp-validation-for="IdGarita" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdEmpleado">Empleado</label>
                <select asp-for="IdEmpleado" class="form-control" required>
                    <option value="">-- Seleccione un empleado --</option>
                    @foreach (var empleado in ViewBag.Empleados)
                    {
                        <option value="@empleado.IdEmpleado">Empleado @empleado.IdEmpleado</option>
                    }
                </select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Nota:</strong> Debe especificar al menos un Vehículo, Visitante o Residente.
    </div>

    <button type="submit" class="btn btn-primary">Registrar Acceso</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>