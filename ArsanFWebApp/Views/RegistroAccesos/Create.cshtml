@model ArsanWebApp.Models.RegistroAcceso

@{
    ViewData["Title"] = "Registrar Nuevo Acceso";
}

<h2 class="mb-4">Registrar Nuevo Acceso</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="FechaIngreso" class="form-label">Fecha y Hora de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="FechaSalida" class="form-label">Fecha y Hora de Salida (Opcional)</label>
                <input asp-for="FechaSalida" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
        <div class="form-group mb-3">
                <label asp-for="ViviendaDestino" class="form-label">Vivienda Destino</label>
                <input asp-for="ViviendaDestino" class="form-control" type="number" />
                <span asp-validation-for="ViviendaDestino" class="text-danger"></span>
            </div>
        </div>    
    </div>

    <div class="row">
        <!-- Vehículo -->
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="IdVehiculo" class="form-label">Vehículo (Opcional)</label>
                <select asp-for="IdVehiculo" asp-items="ViewBag.Vehiculos" class="form-control">
                    <option value="">-- Seleccione un vehículo --</option>
                </select>
                <span asp-validation-for="IdVehiculo" class="text-danger"></span>
            </div>
        </div>

        <!-- Visitante -->
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="IdVisitante" class="form-label">Visitante (Opcional)</label>
                <select asp-for="IdVisitante" asp-items="ViewBag.Visitantes" class="form-control">
                    <option value="">-- Seleccione un visitante --</option>
                </select>
                <span asp-validation-for="IdVisitante" class="text-danger"></span>
            </div>
        </div>

        <!-- Residente -->
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="IdResidente" class="form-label">Residente (Opcional)</label>
                <select asp-for="IdResidente" asp-items="ViewBag.Residentes" class="form-control">
                    <option value="">-- Seleccione un residente --</option>
                </select>
                <span asp-validation-for="IdResidente" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Garita -->
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="IdGarita" class="form-label">Garita</label>
                <select asp-for="IdGarita" asp-items="ViewBag.Garitas" class="form-control" required>
                    <option value="">-- Seleccione una garita --</option>
                </select>
                <span asp-validation-for="IdGarita" class="text-danger"></span>
            </div>
        </div>

        <!-- Empleado -->
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="IdEmpleado" class="form-label">Empleado</label>
                <select asp-for="IdEmpleado" asp-items="ViewBag.Empleados" class="form-control" required>
                    <option value="">-- Seleccione un empleado --</option>
                </select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-3">
        <strong>Nota:</strong> Debe especificar al menos un Vehículo, Visitante o Residente.
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Registrar Acceso</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
