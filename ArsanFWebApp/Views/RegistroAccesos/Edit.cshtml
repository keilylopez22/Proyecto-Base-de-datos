@model ArsanWebApp.Models.RegistroAcceso

<h2>Editar Registro de Acceso</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdAcceso" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaIngreso">Fecha y Hora de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaSalida">Fecha y Hora de Salida (Opcional)</label>
                <input asp-for="FechaSalida" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdVehiculo" class="control-label">Vehículo</label>
                <select asp-for="IdVehiculo" class="form-control">
                    <option value="">Seleccionar Vehículo</option>
                    @if (ViewBag.Vehiculos != null)
                    {
                        @foreach (var vehiculo in ViewBag.Vehiculos)
                        {
                            <option value="@vehiculo.Value">@vehiculo.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdVehiculo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdVisitante" class="control-label">Visitante</label>
                <select asp-for="IdVisitante" class="form-control">
                    <option value="">Seleccionar Visitante</option>
                    @if (ViewBag.Visitantes != null)
                    {
                        @foreach (var visitante in ViewBag.Visitantes)
                        {
                            <option value="@visitante.Value">@visitante.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdVisitante" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdResidente" class="control-label">Residente</label>
                <select asp-for="IdResidente" class="form-control">
                    <option value="">Seleccionar Residente</option>
                    @if (ViewBag.Residentes != null)
                    {
                        @foreach (var residente in ViewBag.Residentes)
                        {
                            <option value="@residente.Value">@residente.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdResidente" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdGarita" class="control-label">Garita</label>
                <select asp-for="IdGarita" class="form-control">
                    <option value="">Seleccionar Garita</option>
                    @if (ViewBag.Garitas != null)
                    {
                        @foreach (var garita in ViewBag.Garitas)
                        {
                            <option value="@garita.Value">@garita.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdGarita" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label">Empleado</label>
                <select asp-for="IdEmpleado" class="form-control">
                    <option value="">Seleccionar Empleado</option>
                    @if (ViewBag.Empleados != null)
                    {
                        @foreach (var empleado in ViewBag.Empleados)
                        {
                            <option value="@empleado.Value">@empleado.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Nota:</strong> Debe especificar al menos un Vehículo, Visitante o Residente.
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
