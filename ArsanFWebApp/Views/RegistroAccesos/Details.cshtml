@model ArsanWebApp.Models.RegistroAcceso

<h2>Detalles del Registro de Acceso</h2>

<dl class="row">
    <dt class="col-sm-3">ID:</dt>
    <dd class="col-sm-9">@Model.IdAcceso</dd>

    <dt class="col-sm-3">Fecha Ingreso:</dt>
    <dd class="col-sm-9">@(Model.FechaIngreso.HasValue ? Model.FechaIngreso.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</dd>

    <dt class="col-sm-3">Fecha Salida:</dt>
    <dd class="col-sm-9">
        @if (Model.FechaSalida.HasValue)
        {
            @Model.FechaSalida.Value.ToString("dd/MM/yyyy HH:mm")
        }
        else
        {
            <span class="badge bg-warning">En curso</span>
        }
    </dd>

    <dt class="col-sm-3">Tipo de Acceso:</dt>
    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.TipoAcceso) ? "N/A" : Model.TipoAcceso)</dd>

    <dt class="col-sm-3">Descripción:</dt>
    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.DescripcionAcceso) ? "N/A" : Model.DescripcionAcceso)</dd>

    <dt class="col-sm-3">Vehículo:</dt>
    <dd class="col-sm-9">@(Model.IdVehiculo.HasValue ? $"ID: {Model.IdVehiculo}" : "N/A")</dd>

    <dt class="col-sm-3">Visitante:</dt>
    <dd class="col-sm-9">@(Model.IdVisitante.HasValue ? $"ID: {Model.IdVisitante}" : "N/A")</dd>

    <dt class="col-sm-3">Residente:</dt>
    <dd class="col-sm-9">@(Model.IdResidente.HasValue ? $"ID: {Model.IdResidente}" : "N/A")</dd>

    <dt class="col-sm-3">Garita:</dt>
    <dd class="col-sm-9">@Model.IdGarita</dd>

    <dt class="col-sm-3">Cluster:</dt>
    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.ClusterGarita) ? "N/A" : Model.ClusterGarita)</dd>

    <dt class="col-sm-3">Empleado:</dt>
    <dd class="col-sm-9">@Model.IdEmpleado</dd>

    <dt class="col-sm-3">Observaciones:</dt>
    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Observaciones) ? "Sin observaciones" : Model.Observaciones)</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IdAcceso" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
</div>