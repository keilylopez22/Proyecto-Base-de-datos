@model List<ArsanWebApp.Models.RegistroAcceso>

<h2>Registros de Acceso</h2>

<!-- Formulario de filtros integrados -->
<form method="get" class="row g-3 mb-4">
    <div class="col-md-2">
        <input type="date" class="form-control" name="fechaIngresoDesde" 
               value="@ViewBag.FechaIngresoDesde?.ToString("yyyy-MM-dd")" placeholder="Desde">
    </div>
    <div class="col-md-2">
        <input type="date" class="form-control" name="fechaIngresoHasta" 
               value="@ViewBag.FechaIngresoHasta?.ToString("yyyy-MM-dd")" placeholder="Hasta">
    </div>
     <div class="col-md-2">
        <input type="text" class="form-control" name="ViviendaDestino" 
               value="@ViewBag.ViviendaDestino" placeholder="Vivienda Destino">
    </div>
    <div class="col-md-2">
        <select class="form-control" name="idGaritaFilter">
            <option value="">Todas las garitas</option>
            @foreach (var item in ViewBag.Garitas)
            {
                <option value="@item.Value" selected="@(ViewBag.IdGaritaFilter?.ToString() == item.Value)">
                    @item.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <select class="form-control" name="idEmpleadoFilter">
            <option value="">Todos los empleados</option>
            @foreach (var item in ViewBag.Empleados)
            {
                <option value="@item.Value" selected="@(ViewBag.IdEmpleadoFilter?.ToString() == item.Value)">
                    @item.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <select class="form-control" name="tipoAccesoFilter">
            <option value="">Todos los tipos</option>
            @foreach (var item in ViewBag.TiposAcceso)
            {
                <option value="@item.Value" selected="@(ViewBag.TipoAccesoFilter?.ToString() == item.Value)">
                    @item.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Registrar Nuevo Acceso</a></p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha Ingreso</th>
                <th>Fecha Salida</th>
                <th>Tipo Acceso</th>
                <th>Descripción</th>
                <th>Garita</th>
                <th>Cluster</th>
                <th>Vivienda Destino</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registro in Model)
            {
                <tr>
                    <td>@registro.IdAcceso</td>
                    <td>@registro.FechaIngreso?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@registro.FechaSalida?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@registro.TipoAcceso</td>
                    <td>@registro.DescripcionAcceso</td>
                    <td>@registro.ClusterGarita</td>
                    <td>@registro.IdClusterGarita</td>
                    <td>@registro.ViviendaDestino</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@registro.IdAcceso" class="btn btn-sm btn-info">Ver</a>
                        <a asp-action="Edit" asp-route-id="@registro.IdAcceso" class="btn btn-sm btn-warning">Editar</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <p>No hay registros de acceso.</p>
    </div>
}

@* Paginación *@
@if (ViewBag.TotalPaginas > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { 
                       pagina = ViewBag.PaginaActual - 1, 
                       tamanoPagina = ViewBag.TamanoPagina,
                       fechaIngresoDesde = ViewBag.FechaIngresoDesde,
                       fechaIngresoHasta = ViewBag.FechaIngresoHasta,
                       idGaritaFilter = ViewBag.IdGaritaFilter,
                       idEmpleadoFilter = ViewBag.IdEmpleadoFilter,
                       tipoAccesoFilter = ViewBag.TipoAccesoFilter,
                       ViviendaDestino = ViewBag.ViviendaDestino
                   })">
                    Anterior
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" 
                       href="@Url.Action("Index", new { 
                           pagina = i, 
                           tamanoPagina = ViewBag.TamanoPagina,
                           fechaIngresoDesde = ViewBag.FechaIngresoDesde,
                           fechaIngresoHasta = ViewBag.FechaIngresoHasta,
                           idGaritaFilter = ViewBag.IdGaritaFilter,
                           idEmpleadoFilter = ViewBag.IdEmpleadoFilter,
                           tipoAccesoFilter = ViewBag.TipoAccesoFilter,
                            ViviendaDestino = ViewBag.ViviendaDestino
                       })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { 
                       pagina = ViewBag.PaginaActual + 1, 
                       tamanoPagina = ViewBag.TamanoPagina,
                       fechaIngresoDesde = ViewBag.FechaIngresoDesde,
                       fechaIngresoHasta = ViewBag.FechaIngresoHasta,
                       idGaritaFilter = ViewBag.IdGaritaFilter,
                       idEmpleadoFilter = ViewBag.IdEmpleadoFilter,
                       tipoAccesoFilter = ViewBag.TipoAccesoFilter,
                        ViviendaDestino = ViewBag.ViviendaDestino
                   })">
                    Siguiente
                </a>
            </li>
        </ul>
    </nav>
}

<div class="text-muted">
    Mostrando @((ViewBag.PaginaActual - 1) * ViewBag.TamanoPagina + 1) 
    a @Math.Min(ViewBag.PaginaActual * ViewBag.TamanoPagina, ViewBag.TotalRegistros) 
    de @ViewBag.TotalRegistros registros
</div>
