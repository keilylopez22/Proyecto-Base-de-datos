@model ArsanWebApp.Models.Empleado

@{
    ViewData["Title"] = "Detalle de Empleado";
}

<h2>Detalle de Empleado</h2>

<div class="card">
    <div class="card-body">
        <p><strong>IdEmpleado:</strong> @Model.IdEmpleado</p>
        <p><strong>IdPersona:</strong> @Model.IdPersona</p>
        <p><strong>Estado:</strong> @Model.Estado</p>
        <p><strong>Fecha Alta:</strong> @Model.FechaAlta?.ToString("yyyy-MM-dd")</p>
        <p><strong>Fecha Baja:</strong> @Model.FechaBaja?.ToString("yyyy-MM-dd")</p>
        <p><strong>Id Puesto Empleado:</strong> @Model.IdPuestoEmpleado</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver a la lista</a>
