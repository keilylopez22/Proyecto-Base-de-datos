@model ArsanWebApp.Models.Empleado
@{
    ViewData["Title"] = "Crear Empleado";
}

<h2>Crear Empleado</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Fecha Alta</label>
        <input asp-for="FechaAlta" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Fecha Baja</label>
        <input asp-for="FechaBaja" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label>Id Persona</label>
        <input asp-for="IdPersona" class="form-control" />
    </div>
    <div class="form-group">
        <label>Id Puesto Empleado</label>
        <input asp-for="IdPuestoEmpleado" class="form-control" />
        <span asp-validation-for="IdPuestoEmpleado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
