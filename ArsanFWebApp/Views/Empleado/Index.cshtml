@model List<ArsanWebApp.Models.Empleado>

<h2>Empleados</h2>

<form method="get" class="mb-3">
    <input type="number" name="idEmpleado" placeholder="ID" value="@ViewBag.IdEmpleado" class="form-control mb-1" />
    <input type="text" name="primerNombre" placeholder="Nombre" value="@ViewBag.PrimerNombre" class="form-control mb-1" />
    <input type="text" name="primerApellido" placeholder="Apellido" value="@ViewBag.PrimerApellido" class="form-control mb-1" />
    <input type="number" name="idPuesto" placeholder="ID Puesto" value="@ViewBag.IdPuesto" class="form-control mb-1" />
    <button type="submit" class="btn btn-primary">Buscar</button>
    <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
</form>

<p><a asp-action="Crear" class="btn btn-success mb-3">Crear Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Completo</th>
            <th>Estado</th>
            <th>Fecha Alta</th>
            <th>Fecha Baja</th>
            <th>ID Persona</th>
            <th>ID Puesto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.IdEmpleado</td>
                <td>@e.NombreCompleto</td>
                <td>@e.Estado</td>
                <td>@e.FechaAlta</td>
                <td>@e.FechaBaja</td>
                <td>@e.IdPersona</td>
                <td>@e.IdPuestoEmpleado</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@e.IdEmpleado" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@e.IdEmpleado" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.Pagina ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = i, idEmpleado = ViewBag.IdEmpleado, primerNombre = ViewBag.PrimerNombre, primerApellido = ViewBag.PrimerApellido, idPuesto = ViewBag.IdPuesto })">@i</a>
            </li>
        }
    </ul>
</nav>
