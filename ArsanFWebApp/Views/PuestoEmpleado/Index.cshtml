@model List<ArsanWebApp.Models.PuestoEmpleado>

<h2>Puestos de Empleado</h2>

<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2">
        <div class="col-auto">
            <input type="text" name="buscarNombre" placeholder="Buscar por Nombre" class="form-control" value="@ViewBag.BuscarNombre" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-success">Crear Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model)
        {
            <tr>
                <td>@p.IdPuestoEmpleado</td>
                <td>@p.Nombre</td>
                <td>@p.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.IdPuestoEmpleado" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@p.IdPuestoEmpleado" method="post" style="display:inline;" onsubmit="return confirm('¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación numerada -->
@if(ViewBag.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for(int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-page="@i" 
                       asp-route-buscarNombre="@ViewBag.BuscarNombre">
                       @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
