@model List<ArsanWebApp.Models.PuestoJuntaDirectiva>

<h2>Puestos de Junta Directiva</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo</a></p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPuesto</td>
                <td>@p.Nombre</td>
                <td>@p.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.IdPuesto" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@p.IdPuesto" method="post" style="display:inline;" onsubmit="return confirm('¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>