@model List<ArsanWebApp.Models.Cluster>

<h2>Clusters</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Residencial</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdCluster</td>
                <td>@c.Descripcion</td>
                <td>@c.Residencial</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.IdCluster" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@c.IdCluster" method="post" style="display:inline;" onsubmit="return confirm('Â¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>