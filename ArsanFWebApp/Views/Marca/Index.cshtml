@model List<ArsanWebApp.Models.Marca>

<h2>Marcas de Vehículos</h2>

<!-- Barra de búsqueda -->
<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="descripcion" class="form-control" placeholder="Buscar marca...">
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Crear Nueva Marca</a></p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marca in Model)
        {
            <tr>
                <td>@marca.IdMarca</td>
                <td>@marca.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@marca.IdMarca" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@marca.IdMarca" method="post" style="display:inline;" 
                          onsubmit="return confirm('¿Eliminar esta marca?');">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>