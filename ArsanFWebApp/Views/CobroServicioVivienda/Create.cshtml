@model ArsanWebApp.Models.CobroServicioVivienda

@{
    ViewData["Title"] = "Crear Cobro de Servicio";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FechaCobro" class="form-label"></label>
        <input asp-for="FechaCobro" type="date" class="form-control" />
        <span asp-validation-for="FechaCobro" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MontoAplicado" class="form-label"></label>
        <input asp-for="MontoAplicado" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="MontoAplicado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EstadoPago" class="form-label"></label>
        <input asp-for="EstadoPago" type="text" class="form-control" />
        <span asp-validation-for="EstadoPago" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdServicio" class="form-label"></label>
        <select asp-for="IdServicio" class="form-control" asp-items="ViewBag.Servicios">
            <option value="">-- Seleccione un servicio --</option>
        </select>
        <span asp-validation-for="IdServicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdCluster" class="form-label"></label>
        <select asp-for="IdCluster" class="form-control" asp-items="ViewBag.Clusters">
            <option value="">-- Seleccione un cluster --</option>
        </select>
        <span asp-validation-for="IdCluster" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumeroVivienda" class="form-label"></label>
        <input asp-for="NumeroVivienda" type="number" class="form-control" />
        <span asp-validation-for="NumeroVivienda" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
