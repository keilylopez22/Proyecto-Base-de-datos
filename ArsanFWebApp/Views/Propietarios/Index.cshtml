@model List<ArsanWebApp.Models.Propietario>

<h2>Propietarios</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Completo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPropietario</td>
                <td>@p.NombreCompleto</td>
                <td>@p.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.IdPropietario" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@p.IdPropietario" method="post" style="display:inline;" onsubmit="return confirm('Â¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>