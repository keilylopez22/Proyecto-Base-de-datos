@model ArsanWebApp.Models.TipoVivienda

<h2>Editar Tipo de Vivienda</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdTipoVivienda" />
    <!-- mismo contenido que Create.cshtml -->
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumeroHabitaciones">Número de Habitaciones</label>
        <input asp-for="NumeroHabitaciones" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="SuperficieTotal">Superficie Total (m²)</label>
        <input asp-for="SuperficieTotal" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="NumeroPisos">Número de Pisos</label>
        <input asp-for="NumeroPisos" class="form-control" type="number" />
    </div>
    <div class="form-group form-check">
        <input asp-for="Estacionamiento" class="form-check-input" type="checkbox" />
        <label asp-for="Estacionamiento" class="form-check-label">Tiene estacionamiento</label>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>