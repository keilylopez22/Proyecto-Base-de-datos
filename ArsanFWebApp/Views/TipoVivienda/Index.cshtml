@model ArsanWebApp.Models.PaginatedList<ArsanWebApp.Models.TipoVivienda>

<h2>Tipos de Vivienda</h2>

<form method="get" class="mb-3">
    <div class="row">
        
       
        <div class="col-md-2">
            <select name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 2)">2 por página</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 por página</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 por página</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
        </div>
    </div>
</form>
<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Habitaciones</th>
            <th>Superficie (m²)</th>
            <th>Pisos</th>
            <th>Estacionamiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.IdTipoVivienda</td>
                <td>@t.Descripcion</td>
                <td>@t.NumeroHabitaciones</td>
                <td>@t.SuperficieTotal</td>
                <td>@t.NumeroPisos</td>
                <td>@(t.Estacionamiento == true ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.IdTipoVivienda" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@t.IdTipoVivienda" method="post" style="display:inline;" onsubmit="return confirm('¿Eliminar?')">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-PageIndex="@i" asp-route-pageSize="@ViewBag.pageSize">@i</a>
                </li>
            }
        </ul>
    </nav>
}

