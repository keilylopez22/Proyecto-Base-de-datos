@model List<ArsanWebApp.Models.Servicio>

<h2>Servicios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tarifa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.IdServicio</td>
                <td>@s.Nombre</td>
                <td>@s.Tarifa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.IdServicio" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@s.IdServicio" method="post" style="display:inline;" onsubmit="return confirm('Â¿Eliminar este servicio?');">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
