@model ArsanWebApp.Models.Servicio

<h2>Editar Servicio</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdServicio" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" maxlength="50" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tarifa"></label>
        <input asp-for="Tarifa" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Tarifa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
