@model ArsanWebApp.Models.Garita

<h2>Editar Garita</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdGarita" />
    <div class="form-group">
        <label asp-for="IdCluster">Cluster</label>
        <select asp-for="IdCluster" class="form-control" 
                asp-items="@(new SelectList(ViewBag.Clusters, "IdCluster", "Descripcion"))">
            <option value="">-- Seleccione un cluster --</option>
        </select>
        <span asp-validation-for="IdCluster" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>