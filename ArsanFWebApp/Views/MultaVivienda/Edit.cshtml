@model ArsanWebApp.Models.MultaVivienda
@{
    ViewBag.Title = "Editar Multa Vivienda";
}

<h1>Editar Multa Vivienda</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdMultaVivienda" />

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones" class="form-label"></label>
        <input asp-for="Observaciones" class="form-control" />
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaInfraccion" class="form-label"></label>
        <input asp-for="FechaInfraccion" type="date" class="form-control" />
        <span asp-validation-for="FechaInfraccion" class="text-danger"></span>
    </div>

     <div class="mb-3">
        <label asp-for="FechaRegistro" class="form-label"></label>
        <input asp-for="FechaRegistro" type="date" class="form-control" />
        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EstadoPago" class="form-label"></label>
        <input asp-for="EstadoPago" class="form-control" />
        <span asp-validation-for="EstadoPago" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdTipoMulta" class="form-label"></label>
        <select asp-for="IdTipoMulta" class="form-select" asp-items="ViewBag.TiposMulta"></select>
        <span asp-validation-for="IdTipoMulta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumeroVivienda" class="form-label"></label>
        <input asp-for="NumeroVivienda" class="form-control" />
        <span asp-validation-for="NumeroVivienda" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdCluster" class="form-label"></label>
        <select asp-for="IdCluster" class="form-select" asp-items="ViewBag.Clusters"></select>
        <span asp-validation-for="IdCluster" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
